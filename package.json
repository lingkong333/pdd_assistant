{
  "name": "app_assistant",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "serve": "concurrently \"pnpm run dev\" \"pnpm run start\" ",
    "start": "nodemon --exec electron . --watch ./ --ext .js,.html,.scss,.vue,.ts,.css",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "electron:dist": "vue-tsc && vite build && electron-builder"
  },
  "dependencies": {
    "electron": "^36.1.0",
    "nodemon": "^3.1.10",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/node": "^22.15.14",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "electron-builder": "^26.0.12",
    "path": "^0.12.7",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vue-tsc": "^2.2.8"
  },
  "build": {
    "appId": "E-commerceAssistant",
    "productName": "电商助手",
    "win": {
      "icon": "./public/vite.svg",
      "artifactName": "${productName}.${ext}"
    },
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "./dist",
      "./package.json",
      "./src/main"
    ],
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "./public/vite.svg",
      "uninstallerIcon": "./public/vite.svg",
      "installerHeaderIcon": "./public/vite.svg",
      "shortcutName": "dclound"
    }
  }
}